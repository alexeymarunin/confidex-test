{
  "name": "alexeymarunin/confidex-test",
  "description": "Confidex Test",
  "license": "MIT",
  "authors": [
    {
      "name": "Alexey Marunin",
      "email": "a.v.marunin@yandex.ru"
    }
  ],
  "require": {
    "php": ">=7.1.3",
    "laravel/lumen-framework": "5.6.*",
    "coinbase/coinbase": "^2.7",
    "vlucas/phpdotenv": "^2.4"
  },
  "autoload": {
      "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.dist', '.env');\""
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true
  }
}
